{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "LoL Jungle Assistant",
    "version": "0.1.0",
    "minimum-overwolf-version": "0.199.0.7",
    "description": "Master the jungle with intelligent camp tracking, strategic recommendations, and performance analytics. Educational tool for jungle improvement.",
    "developer": {
      "name": "minelearnai",
      "url": "https://github.com/minelearnai/lol-jungle-assistant"
    },
    "icon": "icons/icon.png",
    "launcher_icon": "icons/launcher.png",
    "window_icon": "icons/icon.png"
  },
  "permissions": [
    "GameInfo",
    "Hotkeys", 
    "FileSystem",
    "Profile"
  ],
  "game_targeting": {
    "type": "dedicated",
    "game_ids": [5426]
  },
  "game_events": [5426],
  "launch_events": [
    {
      "event": "GameLaunched",
      "event_data": {
        "game_ids": [5426]
      },
      "start_minimized": false
    }
  ],
  "windows": {
    "main": {
      "file": "public/index.html",
      "show_in_taskbar": true,
      "transparent": false,
      "resizable": true,
      "size": {
        "width": 420,
        "height": 360
      },
      "min_size": {
        "width": 350,
        "height": 280
      }
    },
    "overlay": {
      "file": "public/overlay.html",
      "transparent": true,
      "clickthrough": false,
      "resizable": false,
      "in_game_only": true,
      "size": {
        "width": 320,
        "height": 180
      }
    },
    "dashboard": {
      "file": "public/dashboard.html",
      "show_in_taskbar": true,
      "resizable": true,
      "size": {
        "width": 1200,
        "height": 800
      }
    }
  },
  "start_window": "main",
  "hotkeys": {
    "toggle_overlay": {
      "title": "Toggle Jungle Overlay",
      "action-type": "toggle",
      "default": "Ctrl+Shift+J"
    }
  }
}
